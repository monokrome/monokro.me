          a(target='_github', href='https://github.com/monokrome')
            i.github
        li
          a(target='_twitter', href='http://twitter.com/monokrome')
            i.twitter
        li
          a(target='_linkedin', href='http://linkedin.com/in/brandonstoner')
            i.linkedin
        li
          a(href='skype:brandon-stoner')
            i.skype
        li
          a(href='aim:goim?screenname=monokromemc')
            i.aim
        li
          a(target='_dribbble', href='http://dribbble.com/monokrome')
            i.dribbble
        li
          a(target='_last-fm', href='http://last.fm/music/monokrome')
            i.last-fm
        li
          a(target='googleplus', href='https://plus.google.com/113006510220726203989')
            i.googleplus

    section#audio-player
      object(height='18', width='100%')
        param(name='movie', value='https://player.soundcloud.com/player.swf?url=http%3A%2F%2Fapi.soundcloud.com%2Fusers%2F752428&color=ffffff&auto_play=false&player_type=tiny&font=Arial')
