  body
    section#stage
      header#header mk

    section#shortcuts-container
      ul#shortcuts
        // Soundcloud badge
        li.external
          iframe(allowtransparency='true', scrolling='no', frameborder='no', src='https://w.soundcloud.com/icon/?url=http%3A%2F%2Fsoundcloud.com%2Fmonokrome&color=white_transparent&size=32', style='width: 32px; height: 32px;')
