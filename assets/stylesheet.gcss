body
  font-size: 1.3rem

  > main
    display: -webkit-flex
    display: flex
    margin: 0 auto
    max-width: 72rem

    > section
      -webkit-flex-grow: 1
      flex-grow: 1
      padding: 0 3rem
      min-height: 100vh
      max-width: 33rem

    > aside
      display: none
      width: 480px
      min-height: 100vh


@media only screen and (min-width: 960px)
  body > main > aside
    display: block
