#music-player
  display none

  &.playing
    .button.play
      display none

    .button.pause
      display inline-block

  .button
    cursor pointer

    &.pause
      display none

  &.active
    display block


#music-player-current-track
  background-color #EBEBEB

  position fixed
  bottom 0px
  left 0px
  right: 0px

  z-index 999

  color #333

  box-shadow 0px 0px 2px #000

  .buttons
    float right


#now-playing
  padding 0.2em 0.4em

  white-space nowrap

  a
    color inherit
    text-decoration none

  .song-title
    font-weight bold


#track-selection
  white-space nowrap
  overflow-x hidden
  text-overflow ellipsis
