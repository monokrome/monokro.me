{
  "contents": "../static/content/",
  "templates": "../static/templates/",
  "output": "../public/",

  "baseUrl": "/",

  "plugins": [
    "../static/plugins/blog.coffee"
  ],

  "require": {
    "moment": "moment",
    "lodash": "lodash",
    "typogr": "typogr"
  },

  "locals": {
    "url": "http://monokro.me",
    "description": "Personal website for Brandon R. Stoner"
  },

  "ignore": [],

  "blog": {
    "template": "blog/index.jade",
    "articles": "articles",
    "articlesPerPage": 3,
    "pages": {
      "initial": "index.html",
      "consecutive": "%d.html"
    }
  },

  "jade": {
    "pretty": true
  },

  "markdown": {
    "smartLsits": true,
    "smartypants": true
  }
}
