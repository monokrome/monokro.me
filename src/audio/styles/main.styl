#audio-player
  display none

  &.playing
    .button.play
      display none

    .button.pause
      display inline-block

  .button
    cursor pointer

    &.pause
      display none

  &.active
    display block


#audio-player-current-track
  margin 0
  padding 0

  background-color rgb(236,236,236)
  font-size 1.1em

  position fixed
  bottom 0px
  left 0px
  right: 0px

  z-index 999

  color #333

  box-shadow 0px 0px 5px #696969

  .buttons
    float right


#now-playing
  padding 0.2em 0.4em
  white-space nowrap

  a
    color inherit
    text-decoration none

  .track-title
    font-weight bold


#track-selection
  margin-bottom 1.68em

  width 180px

  border-left 1px solid #CCC

  background-color hsla(0,0%,99%,96%)

  font-size 1.1em

  overflow-x hidden

  position fixed
  top 0px
  right 0px
  bottom 0px

  z-index 50

  .item
    cursor pointer

  ul
    padding-left 0px

  li
    padding 0.25em 1em

    border-bottom 1px solid #EEE

    cursor pointer

    white-space nowrap
    overflow-x hidden
    text-overflow ellipsis

    &:hover
      background-color #F6F6F6

    a:hover
      text-decoration none

#audio-controls
  margin-right 0px
  float right

  font-size 1.3em

  ul
    list-style none
    padding-left 0
    margin-bottom 0

  li
    display inline-block
    margin-left 0.4em


@media min-device-pixel-ratio 2
  #track-selection
    font-size 1.6em
    width 300px

  #audio-player-current-track
    font-size 1.6em
