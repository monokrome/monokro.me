#audio-player
  display none

  &.playing
    .button.play
      display none

    .button.pause
      display inline-block

  .button
    cursor pointer

    &.pause
      display none

  &.active
    display block


#audio-player-current-track
  background-color #EBEBEB

  position fixed
  bottom 0px
  left 0px
  right: 0px

  z-index 999

  color #333

  box-shadow 0px 0px 2px #000

  .buttons
    float right


#now-playing
  padding 0.2em 0.4em
  white-space nowrap

  a
    color inherit
    text-decoration none

  .song-title
    font-weight bold


#track-selection
  background-color #FCFCFC

  width 300px

  position fixed
  top 0px
  right 0px
  bottom 0px

  z-index 50

  white-space nowrap
  overflow-x hidden
  text-overflow ellipsis

  border-left 1px solid #CCC
  padding-left 1em

  .item
    cursor pointer

  ul
    padding-left 0


#audio-controls
  margin-right 40px
  float right

  font-size 1.3em

  ul
    list-style none

  li
    display inline-block
