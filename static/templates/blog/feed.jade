doctype xml


rss(
  version='2.0',
  xmlns:content='http://purl.org/rss/1.0/modules/content/',
  xmlns:wfw='http://wellformedweb.org/CommentAPI/',
  xmlns:dc='http://purl.org/dc/elements/1.1/'
  xmlns:atom='http://www.w3.org/2005/Atom'
)

  channel
    - var articles = env.helpers.blog.discoverArticles(contents);

    title= locals.name

    atom
      link(href=locals.url + '/feed.xml', rel='self', type='application/rss+xml')

    link= locals.url
    description= locals.description

    pubDate= articles[0].rfc822date
    language en

    for article in articles
      - var permalink = 

      item
        title= article.title
        link= permalink

        pubDate= article.rfc822date
        guid(isPermaLink='true')= permalink

        author Brandon R. Stoner
        description= article.getHtml(locals.url)
