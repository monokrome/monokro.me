extends layout


block title
  title monokro.me


block append stylesheets
  link(
    href="http://fonts.googleapis.com/css?family=Source+Sans+Pro",
    rel="stylesheet",
    type="text/css")

  link(rel='stylesheet', href='/stylesheets/application.css')


block append scripts
  script(src='/scripts/application.js')
  script(src='/scripts/partials.js')


block prepend layout
  section#stage
    header#header

  section#content-container
    main#content(data-ui-view='primary')
      block content

  section#github-ribbon
    a(target='_github', href='https://github.com/monokrome/monokro.me')
      img(src='https://s3.amazonaws.com/github/ribbons/forkme_left_white_ffffff.png',
          alt='Fork me on GitHub', width=179, height=179)

  section#audio-player-container(data-mk-audio-player)

  footer#footer
    div.content-wrap(data-ui-view='footer')
      block footer
        section#shortcuts-container
          ul#shortcuts
            li.external: a(target='_soundcloud', href='https://soundcloud.com/monokrome')
              i.icon-soundcloud

            li: a(target='_github', href='https://github.com/monokrome')
              i.icon-github

            li: a(target='_twitter', href='http://twitter.com/monokrome')
              i.icon-twitter

            li: a(target='_linkedin', href='http://linkedin.com/in/brandonstoner')
              i.icon-linkedin

            li: a(href='skype:brandon-stoner')
              i.icon-skype

            li: a(target='_dribbble', href='http://dribbble.com/monokrome')
              i.icon-dribbble

            li: a(target='_last-fm', href='http://last.fm/music/monokrome')
              i.icon-lastfm

            li: a(target='googleplus', href='https://plus.google.com/113006510220726203989')
              i.icon-gplus

            li: a(href='aim:goim?screenname=monokromemc')
              i.icon-aim

        section.copy
          p &copy; #{ new Date().getFullYear() }
