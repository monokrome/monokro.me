doctype xml

rss(version='2.0',
    xmlns:content='http://purl.org/rss/1.0/modules/content/',
    xmlns:wfw='http://wellformedweb.org/CommentAPI/',
    xmlns:dc='http://purl.org/dc/elements/1.1/'
    xmlns:atom='http://www.w3.org/2005/Atom')

  channel
    - var articles = env.helpers.getArticles(contents);

    title= locals.name
    atom:link(href='http://monokro.me/feed.xml', rel='self', type='application/rss+xml')

    link= 'http://monokro.me/'

    description= locals.description
    pubDate= articles[0].rfc822date
    generator Wintersmith - https://github.com/jnordberg/wintersmith
    language en

    for article in articles
      - var permalink = 'http://monokro.me/' + article.url

      item
        title= article.title
        link= permalink

        pubDate= article.rfc822date
        guid(isPermaLink='true')= permalink
        author= article.author

        description= article.getHtml('http://monokro.me/')
