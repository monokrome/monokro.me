!!! 5

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width')

      title
        block title
          = locals.name

      link(rel='icon', href='/images/icons/favicon.ico')
      link(rel='apple-touch-icon', href='/images/icons/apple-touch-icon.svg')

      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro', rel='stylesheet', type='text/css')

      link(rel='stylesheet', href=locals.url+'/stylesheets/bootstrap.css', type='text/css')
      link(rel='stylesheet', href=locals.url+'/stylesheets/main.css', type='text/css')

      script.
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-37462317-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

  body
    .container-fluid
      section#stage
        header#header mk

      section#content-container
        section#content
          block content

      section#shortcuts-container
        ul#shortcuts
          // Soundcloud badge
          li.external: a(target='_soundcloud', href='https://soundcloud.com/monokrome')
            i.icon-soundcloud

          li: a(target='_github', href='https://github.com/monokrome')
            i.icon-github

          li: a(target='_twitter', href='http://twitter.com/monokrome')
            i.icon-twitter

          li: a(target='_linkedin', href='http://linkedin.com/in/brandonstoner')
            i.icon-linkedin

          li: a(href='skype:brandon-stoner')
            i.icon-skype

          li: a(target='_dribbble', href='http://dribbble.com/monokrome')
            i.icon-dribbble

          li: a(target='_last-fm', href='http://last.fm/music/monokrome')
            i.icon-lastfm

          li: a(target='googleplus', href='https://plus.google.com/113006510220726203989')
            i.icon-gplus

          li: a(href='aim:goim?screenname=monokromemc')
            i.icon-aim

      section#github-ribbon
        a(target='_github', href='https://github.com/monokrome/monokro.me')
          img(src='https://s3.amazonaws.com/github/ribbons/forkme_left_white_ffffff.png', alt='Fork me on GitHub')

      section#audio-player-container

      footer#footer
        div.content-wrap
          block footer
            section.copy
              p &copy; #{ new Date().getFullYear() } #{ locals.owner }
