!!! 5

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(name='viewport', content='width=device-width')

      title
        block title
          = locals.name

      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro', rel='stylesheet', type='text/css')

      link(rel='stylesheet', href=locals.url+'/stylesheets/bootstrap.css', type='text/css')
      link(rel='stylesheet', href=locals.url+'/stylesheets/main.css', type='text/css')

  body
    header
      div.content-wrap
        block header
          h1: a(href=locals.url)= locals.name

    div#content
      div.content-wrap
        block content

    footer
      div.content-wrap
        block footer
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner }
